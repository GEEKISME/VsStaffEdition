<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.biotag.vsstaffedition.SettingDistrictActivity"
    android:gravity="center"
    android:background="@color/pinks">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请为设备设置用途："
        android:textColor="@color/advance_red"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/tv_func"
        android:paddingLeft="20dp"/>

    <com.biotag.vsstaffedition.view.FlexRadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/flexfunc"
        app:flexWrap="wrap"
        android:layout_below="@+id/tv_func"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请为设备设置其所处的区域:  "
        android:textColor="@color/advance_red"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/tv_tips"
        android:paddingLeft="20dp"
        android:layout_below="@+id/flexfunc"
        android:layout_marginTop="30dp"/>
    <com.biotag.vsstaffedition.view.FlexRadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/flexrg"
        android:layout_below="@+id/tv_tips"
        android:layout_marginTop="5dp"
        app:flexWrap="wrap"/>

    <Button
        android:id="@+id/btn_ok"
        android:layout_below="@+id/flexrg"
        android:layout_marginTop="15dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="确定"
        android:textSize="15sp"
        android:textAllCaps="false"
        android:background="@drawable/query_bg"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
